const fadeUp = { hidden: { opacity: 0, y: 16 }, show: { opacity: 1, y: 0, transition: { duration: 0.6 } }, };

function Chip({ children }: { children: React.ReactNode }) { return ( <span className="inline-flex items-center rounded-full border border-white/10 bg-white/5 px-3 py-1 text-sm text-white/80"> {children} </span> ); }

function SectionTitle({ eyebrow, title, subtitle, }: { eyebrow: string; title: string; subtitle?: string; }) { return ( <div className="mb-8"> <div className="mb-3 inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs tracking-wide text-white/70"> <span className="h-1.5 w-1.5 rounded-full bg-[color:var(--accent)]" /> {eyebrow} </div> <h2 className="text-2xl font-semibold tracking-tight text-white sm:text-3xl"> {title} </h2> {subtitle ? ( <p className="mt-3 max-w-2xl text-base leading-relaxed text-white/70"> {subtitle} </p> ) : null} </div> ); }

function Anchor({ href, children }: { href: string; children: React.ReactNode }) { return ( <a href={href} className="inline-flex items-center gap-2 text-white/80 hover:text-white transition" target={href.startsWith("http") ? "_blank" : undefined} rel={href.startsWith("http") ? "noreferrer" : undefined} > {children} <ExternalLink className="h-4 w-4 opacity-60" /> </a> ); }

export default function PortfolioUltraClassy() { // Lightweight multi-page routing via hash (#home, #work, #business, #blog, #contact) const getRoute = () => { const raw = (typeof window !== "undefined" ? window.location.hash : "") || "#home"; const [hash, query] = raw.split("?"); const page = (hash || "#home").replace("#", "") as any; const params = new URLSearchParams(query || ""); return { page, post: params.get("post") } as { page: string; post: string | null }; };

const [{ page, post }, setRoute] = useState(getRoute());

React.useEffect(() => { const onHash = () => setRoute(getRoute()); window.addEventListener("hashchange", onHash); return () => window.removeEventListener("hashchange", onHash); }, []);

const [mode, setMode] = useState<"dark" | "light">("dark");

const palette = useMemo(() => { // Premium emerald + electric lime vibe (fits BlinkBag) return mode === "dark" ? { bg: "bg-[#070A0F]", card: "bg-white/[0.04]", border: "border-white/10", text: "text-white", subtext: "text-white/70", glow: "from-[color:var(--accent)]/20 via-transparent to-[color:var(--accent2)]/10", } : { bg: "bg-[#F7F8FA]", card: "bg-black/[0.04]", border: "border-black/10", text: "text-black", subtext: "text-black/70", glow: "from-[color:var(--accent)]/20 via-transparent to-[color:var(--accent2)]/10", }; }, [mode]);

const isDark = mode === "dark";

return ( <div className={${palette.bg} min-h-screen} style={{ // Accent variables (change these two to re-theme) // Dark mode: neon emerald + lime // Light mode: same accents still look premium ["--accent" as any]: "#12F7A2", ["--accent2" as any]: "#B6FF4D", }} > {/* Background glow */} <div className="pointer-events-none fixed inset-0"> <div className={absolute -top-48 left-1/2 h-[520px] w-[720px] -translate-x-1/2 rounded-full blur-3xl bg-gradient-to-b ${palette.glow}} /> <div className={absolute -bottom-64 right-[-160px] h-[560px] w-[560px] rounded-full blur-3xl bg-gradient-to-b ${palette.glow}} /> </div>

{/* Top nav */}
  <div className="sticky top-0 z-20 backdrop-blur-xl">
    <div
      className={`mx-auto flex max-w-6xl items-center justify-between px-5 py-4 border-b ${palette.border} ${
        isDark ? "bg-[#070A0F]/60" : "bg-white/70"
      }`}
    >
      <a href="#" className="group inline-flex items-center gap-3">
        <div
          className={`h-9 w-9 rounded-2xl border ${palette.border} ${palette.card} grid place-items-center shadow-sm`}
        >
          <Star className={`${isDark ? "text-white" : "text-black"} h-4 w-4`} />
        </div>
        <div className="leading-tight">
          <div className={`text-sm font-semibold ${palette.text}`}>{CONFIG.name}</div>
          <div className={`text-xs ${palette.subtext}`}>Portfolio</div>
        </div>
      </a>

      <div className="hidden items-center gap-2 text-sm sm:flex">
        {CONFIG.pages.map((p) => {
          const active = page === p.id;
          return (
            <a
              key={p.id}
              href={`#${p.id}`}
              className={`rounded-full px-3 py-1 transition ${
                active
                  ? isDark
                    ? "bg-white/10 text-white"
                    : "bg-black/10 text-black"
                  : `${palette.subtext} hover:${palette.text}`
              }`}
            >
              {p.label}
            </a>
          );
        })}
      </div>

      <div className="flex items-center gap-2">
        <Button
          variant="secondary"
          className={`${
            isDark
              ? "bg-white/10 text-white hover:bg-white/15"
              : "bg-black/10 text-black hover:bg-black/15"
          } rounded-2xl`}
          onClick={() => setMode((m) => (m === "dark" ? "light" : "dark"))}
        >
          {isDark ? "Light" : "Dark"}
        </Button>
        <Button
          className="rounded-2xl"
          onClick={() => {
            const el = document.querySelector("#contact");
            el?.scrollIntoView({ behavior: "smooth" });
          }}
        >
          Let’s talk <ArrowRight className="ml-2 h-4 w-4" />
        </Button>
      </div>
    </div>
  </div>

  {/* Content */}
